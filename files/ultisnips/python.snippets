snippet _inline_test "Add python inline test"
def main():
    parser = argparse.ArgumentParser(description="Running with --test will run tests. All other options will do nothing")
    parser.add_argument("--test", action="store_true", default=False, help="Run tests")
    args = parser.parse_args()
    if args.test:
        sys.argv = sys.argv[:1]
        unittest.main(__name__)

if __name__ == "__main__":
    main()
endsnippet


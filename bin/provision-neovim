#! /usr/bin/env bash

set -o errexit
set -o xtrace
set -o nounset

# ========================= CONFIG ==================================
NVM_VERSION=v0.39.2
NODE_VERSION=19.0.0

NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm

if [ -z ${XDG_CONFIG_HOME+x} ]; then
  echo "XDG_CONFIG_HOME not set. Setting it to ~/.config for this script.";
  XDG_CONFIG_HOME=~/.config
else
  echo "XDG_CONFIG_HOME is set to: $XDG_CONFIG_HOME";
fi;


# ========================= TASK DEFINITIONS ==========================
remove_old_vims(){
  echo "Remove old vims"
  sudo apt-get remove vim vim-tiny -y
}


install_neovim(){
  echo "Installing neovim"
  sudo apt-get install neovim -y
}


thaw_devconfig(){
  echo "Thawing devconfig"
  bash "$DEVCONFIG_ROOT/bin/thaw-devconfig"
}

install_node(){
  if [ -f "$HOME/.nvm/nvm.sh" ]
    then
      echo "nvm already installed"
  else
    echo "Installing nvm"
    curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/$NVM_VERSION/install.sh | bash
    echo "Installing node"
    # shellcheck source=/dev/null
    source "$HOME/.nvm/nvm.sh" && nvm install "$NODE_VERSION"
  fi
}

install_vim_plug(){
  echo "Installing vim-plug"
  curl -fLo ~/.vim/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
}

install_vim_plugins(){
  echo "Install vim plugins"
  for EXT in coc-json coc-tsserver coc-prettier coc-sh coc-pyright coc-rust-analyzer
    do
      cd "$XDG_CONFIG_HOME/coc/extensions" && npm install "$EXT"
    done
}

extend_bashrc(){
  echo "Extending bashrc"
  cat << EOF >> "$HOME/.bashrc"

# zzz begin extensions
set -o vi
bind 'set show-mode-in-prompt on'
bind 'set vi-cmd-mode-string "\1\e[2 q\2"'
bind 'set vi-ins-mode-string "\1\e[6 q\2"'

export EDITOR="vim"
export VISUAL="\$EDITOR"
EOF
}

install_pyenv(){
  if [ -d "$HOME/.pyenv" ]
    then
      echo "pyenv already installed"
  else
    echo "Installing pyenv"
    curl https://pyenv.run | bash
  fi
}

install_rust(){
  echo "Installing rust"
  curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh
}


# ========================= MAINLINE =======================================

remove_old_vims
install_neovim
thaw_devconfig
install_node
install_vim_plug
install_vim_plugins
extend_bashrc
install_pyenv
install_rust
